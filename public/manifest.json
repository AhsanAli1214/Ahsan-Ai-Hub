{
  "name": "Ahsan Ai Hub",
  "short_name": "Ahsan Ai Hub",
  "description": "Privacy-first AI platform with free AI chat, content generation, writing tools, translation, and text-to-speech. No login required, 100% private.",
  "start_url": "/",
  "scope": "/",
  "id": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "minimal-ui", "standalone"],
  "capture_links": "existing-client-navigate",
  "launch_handler": {
    "client_mode": ["focus-existing", "auto"]
  },
  "file_handlers": [
    {
      "action": "/recommendations",
      "accept": {
        "text/plain": [".txt"],
        "application/pdf": [".pdf"],
        "image/*": [".png", ".jpg", ".jpeg", ".webp"]
      }
    }
  ],
  "share_target": {
    "action": "/recommendations",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "dir": "ltr",
  "lang": "en-US",
  "orientation": "portrait-primary",
  "prefer_related_applications": false,
  "shortcuts": [
    {
      "name": "AI Chat",
      "short_name": "Chat",
      "description": "Start an AI conversation",
      "url": "/recommendations",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Content Tools",
      "short_name": "Tools",
      "description": "Access AI content generation tools",
      "url": "/content-tools",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Chat History",
      "short_name": "History",
      "description": "View your recent chats",
      "url": "/chat-history",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "categories": ["productivity", "utilities", "ai"],
  "launch_handler": {
    "client_mode": ["focus-existing", "auto"]
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "/recommendations",
      "accept": {
        "text/plain": [".txt"],
        "application/pdf": [".pdf"],
        "image/*": [".png", ".jpg", ".jpeg", ".webp"]
      }
    }
  ],
  "share_target": {
    "action": "/recommendations",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
}
