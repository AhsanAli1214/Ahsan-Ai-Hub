{
  "name": "Ahsan Ai Hub",
  "short_name": "Ahsan Ai Hub",
  "description": "Privacy-first AI platform with free AI chat, content generation, writing tools, translation, and text-to-speech. No login required, 100% private.",
  "start_url": "/",
  "scope": "/",
  "id": "/",
  "categories": ["productivity", "utilities", "ai", "education", "lifestyle"],
  "display": "standalone",
  "display_override": ["window-controls-overlay", "minimal-ui", "standalone"],
  "theme_color": "#3b82f6",
  "background_color": "#09090b",
  "prefer_related_applications": true,
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://ahsan-ai-hub.vercel.app/manifest.json"
    }
  ],
  "capture_links": "existing-client-navigate",
  "launch_handler": {
    "client_mode": ["focus-existing", "auto"]
  },
  "icons": [
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-maskable-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icon-maskable-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot-540.png",
      "sizes": "540x720",
      "type": "image/png",
      "form_factor": "narrow"
    },
    {
      "src": "/screenshot-desktop.png",
      "sizes": "1024x576",
      "type": "image/png",
      "form_factor": "wide"
    }
  ],
  "shortcuts": [
    {
      "name": "AI Chat",
      "short_name": "Chat",
      "description": "Start a secure AI conversation",
      "url": "/recommendations",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Math Solver",
      "short_name": "Math",
      "description": "Solve math problems with AI Vision",
      "url": "/content-tools?tool=math",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Story Writer",
      "short_name": "Story",
      "description": "Create creative AI stories",
      "url": "/content-tools?tool=story",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Translate",
      "short_name": "Translate",
      "description": "50+ Languages AI Translator",
      "url": "/content-tools?tool=translator",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "categories": ["productivity", "utilities", "ai"],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "/recommendations",
      "accept": {
        "text/plain": [".txt"],
        "application/pdf": [".pdf"],
        "image/*": [".png", ".jpg", ".jpeg", ".webp"]
      }
    }
  ],
  "share_target": {
    "action": "/recommendations",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "widgets": [
    {
      "name": "AI Tip of the Day",
      "short_name": "AI Tip",
      "description": "Daily productivity tips from Ahsan AI",
      "tag": "ai-tip",
      "template": "ai-tip-widget",
      "ms_ac_template": "widgets/ai-tip.json",
      "data": "widgets/ai-tip-data.json",
      "type": "application/json",
      "screenshots": [
        {
          "src": "/icon-512.png",
          "sizes": "512x512",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Math Solver Quick-Launch",
      "short_name": "Math",
      "description": "Instantly solve any math problem",
      "tag": "math-solver",
      "template": "math-widget",
      "ms_ac_template": "widgets/math-solver.json",
      "data": "widgets/math-solver-data.json",
      "type": "application/json",
      "screenshots": [
        {
          "src": "/icon-512.png",
          "sizes": "512x512",
          "type": "image/png"
        }
      ]
    }
  ],
  "dir": "ltr",
  "lang": "en-US",
  "protocol_handlers": [
    {
      "protocol": "web+ahsan",
      "url": "/recommendations?q=%s"
    }
  ],
  "permissions": ["notifications", "push", "background-fetch", "background-sync", "periodic-background-sync"]
}
