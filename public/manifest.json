{
  "name": "Ahsan Ai Hub",
  "short_name": "Ahsan Ai Hub",
  "description": "Privacy-first AI platform with free AI chat, content generation, writing tools, translation, and text-to-speech. No login required, 100% private.",
  "start_url": "/",
  "scope": "/",
  "id": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "minimal-ui", "standalone"],
  "background_color": "#09090b",
  "theme_color": "#3b82f6",
  "background_sync": true,
  "periodic_background_sync": true,
  "handle_links": "auto",
  "orientation": "portrait",
  "prefer_related_applications": true,
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://ahsan-ai-hub.vercel.app/manifest.json"
    }
  ],
  "capture_links": "existing-client-navigate",
  "launch_handler": {
    "client_mode": ["focus-existing", "auto"]
  },
  "icons": [
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-maskable-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icon-maskable-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot-540.png",
      "sizes": "540x720",
      "type": "image/png",
      "form_factor": "narrow"
    },
    {
      "src": "/screenshot-desktop.png",
      "sizes": "1024x576",
      "type": "image/png",
      "form_factor": "wide"
    }
  ],
  "shortcuts": [
    {
      "name": "AI Chat",
      "short_name": "Chat",
      "description": "Start an AI conversation",
      "url": "/recommendations",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Content Tools",
      "short_name": "Tools",
      "description": "Access AI content generation tools",
      "url": "/content-tools",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Chat History",
      "short_name": "History",
      "description": "View your recent chats",
      "url": "/chat-history",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "categories": ["productivity", "utilities", "ai"],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "/recommendations",
      "accept": {
        "text/plain": [".txt"],
        "application/pdf": [".pdf"],
        "image/*": [".png", ".jpg", ".jpeg", ".webp"]
      }
    }
  ],
  "share_target": {
    "action": "/recommendations",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "dir": "ltr",
  "lang": "en-US",
  "protocol_handlers": [
    {
      "protocol": "web+ahsan",
      "url": "/recommendations?q=%s"
    }
  ],
  "permissions": ["notifications", "push", "background-fetch", "background-sync", "periodic-background-sync"]
}
